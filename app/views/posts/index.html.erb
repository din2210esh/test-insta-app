<%= link_to "New Post", new_post_path, style: "float:right"%> 
<div class = "posts-wrapper row">
	<div class = "post">
      <div class = "post-head">
		<% @posts.each do |post| %>
			<div class = "image text-center">
			 	<%=image_tag post.image,style: "width: 60%"%>
			 </div>
		 	<p class="caption text-center"><%= post.comment%></p>
		 	<div class="text-center edit-links" >
				<%= link_to 'Edit', edit_post_path(post) %> 
				|
				<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure, you want to delete this?' } %>
			</div>
		<%end%>
		</div>
	</div>
</div>

